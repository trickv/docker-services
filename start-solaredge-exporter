version=1.1
inverter_address=solaredge-inverter.home.vanstaveren.us

docker run -d \
    --restart=unless-stopped \
    --name solaredge-exporter \
    -p 2112:2112 \
    -e INVERTER_ADDRESS=$inverter_address \
    -e EXPORTER_INTERVAL=5 \
    -e INVERTER_PORT=1502 \
    dave92082/solaredge-exporter:$version
